{
	"manifest_version": 2,

	"name": "Transliteration: Latin - Cyrillic",
	"description": "This extension transliterates the web page between Latin and Cyrillic",
	"icons": { "16" : "images/16.png",
                        "48" : "images/48.png",
                        "128" : "images/128.png"},
	"version": "0.1",
	"content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",

	// "homepage_url": "",
	"browser_action": {
		"default_icon": "images/16.png",
		"default_popup": "popup.html"
	},

	"permissions": [
		"tabs", 
		"https://ajax.googleapis.com/"
	],

	 "content_scripts": [
    {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["js/getDescription.js"]
    }
   ]

}