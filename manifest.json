{
	"manifest_version": 2,
	"name": "Uzbek transliteration",
	"description": "This extension transliterates the web page between Latin and Cyrillic alphabets for Uzbek language",
	"icons": { "16" : "images/16.png", "48" : "images/48.png", "128" : "images/128.png"},
	"version": "0.1",
	"browser_action": {
		"default_title": "Lotincha - Кириллча",
		"default_icon": "images/48.png",
		"default_popup": "popup.html"
    },
    "permissions": ["activeTab"],
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "all_frames": true,
        "js":      ["js/content.js"]
    }]
}